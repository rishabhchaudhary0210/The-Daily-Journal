<%- include("partials/header");%>

    <div class="home">
        <h1>Home Page </h1>
        <p>
            Find the latest blogs from all genres written by users worldwide.
        </p>
        <!-- <div class="homeBox">
        </div> -->
        <%for(var i=0;i<texts.length;i++){%>
            <div class="hRule"></div>
            <div class="homeBox">
                <form action="/blog/delete" method="post">
